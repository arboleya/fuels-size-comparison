{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2022", "ESNext.disposable"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "web"],
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["**/node_modules"],
}
